{% layout 'layout' %}
<section>
  <div class="container">
      <div class="row">
          <div class="col-md-12">
                <legend>Order List</legend>
                {% if orders.size > 0 %}
                    <table class="table table-hover table-sm">
                        <thead>
                            <tr>
                                <td>Order ID</td>
                                <td>Date</td>
                                <td>Customer</td>
                                <td>Email</td>
                                <td>Action</td>
                            </tr>
                        </thead>
                        <tbody>
                            {% for order in orders %}
                            <tr>
                                <td><a href="/orders/{{order.id}}">#{{order.order_number}}</a></td>
                                <td title="{{order.created_at}}">{{order.created_at}}</td>
                                <td>{{order.customer.first_name}} {{this.customer.last_name}}</td>
                                <td>{{order.email}}</td>
                                <td><a href="/orders/{{order.id}}">View</a></td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                {% else %}
                    <div class="alert alert-info">
                        No Order Available
                    </div>
                {% endif %}
          </div>
      </div>
  </div>
</section>
{% block 'footer' %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                Copyright @ 2019, sixt4
            </div>
        </div>
    </div>
{% endblock %}